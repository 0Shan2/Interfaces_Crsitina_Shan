<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AdminTablaController">
   <top>
      <AnchorPane prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="TOP_RIGHT">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#c1e2db" height="40.0" stroke="#c8e6cf" strokeType="INSIDE" width="900.0" />
            <MenuBar layoutX="715.0" layoutY="5.0" prefHeight="30.0" prefWidth="178.0" style="-fx-background-color: #c1e2db;">
              <menus>
                <Menu mnemonicParsing="false" text="Editar">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirFormulario" text="Formulario" />
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ayuda">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#abrirGuia" text="Guía" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Centro">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#abrirInicio" text="Inicio" />
                        <MenuItem mnemonicParsing="false" text="Sobre SIX" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </AnchorPane>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#abrirlista" prefHeight="40.0" prefWidth="175.0" text="Default" />
            <Button mnemonicParsing="false" onAction="#abrirTablaMujer" prefHeight="40.0" prefWidth="175.0" style="-fx-background-color: c8e6cf;" text="Mujer" />
            <Button mnemonicParsing="false" onAction="#abrirTablaHombre" prefHeight="40.0" prefWidth="175.0" style="-fx-background-color: b2c5ce;" text="Hombre" />
            <Button mnemonicParsing="false" onAction="#abrirTablaN" prefHeight="40.0" prefWidth="175.0" style="-fx-background-color: c8e6cf;" text="Niños" />
            <Button mnemonicParsing="false" onAction="#abrirTablaSets" prefHeight="40.0" prefWidth="175.0" style="-fx-background-color: b2c5ce;" text="Sets" />
         </children>
         <BorderPane.margin>
            <Insets top="40.0" />
         </BorderPane.margin></VBox>
   </left>
   <center>
      <TableView fx:id="TablaLista" prefHeight="650.0" prefWidth="700.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="ColCodigo" prefWidth="140.0" text="Código" />
          <TableColumn fx:id="ColNombre" prefWidth="140.0" text="Nombre" />
          <TableColumn fx:id="ColMaterial" prefWidth="140.0" text="Materiales" />
            <TableColumn fx:id="ColCantidad" prefWidth="140.0" text="Cantidad_Stock" />
            <TableColumn fx:id="ColPrecio" prefWidth="140.0" text="Precio" />
        </columns>
      </TableView>
   </center>
</BorderPane>
