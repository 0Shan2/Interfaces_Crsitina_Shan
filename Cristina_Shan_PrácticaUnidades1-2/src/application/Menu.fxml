<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MenuController">
   <top>
      <AnchorPane prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="TOP_RIGHT">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#b2c9ff" height="40.0" stroke="#fcfca3" strokeType="INSIDE" width="900.0" />
            <MenuBar layoutX="740.0" layoutY="5.0" prefHeight="30.0" prefWidth="160.0" style="-fx-background-color: #b2c9ff;">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirFormulario" text="Open" />
                    <MenuItem mnemonicParsing="false" onAction="#cerrarListado" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </AnchorPane>
   </top>
   <left>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
